<h1>Listing messages</h1>

<table>
  <tr>
    <th>To</th>
    <th>From</th>
    <th>Subject</th>
    <th>Body</th>
    <th>Sent</th>
    <th>Received</th>
    <th>Has attach</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @current_user.messages.each do |message| %>
  <tr>
    <td><%= message.to %></td>
    <td><%= message.from %></td>
    <td><%= message.subject %></td>
    <td><%= message.body %></td>
    <td><%= message.sent %></td>
    <td><%= message.received %></td>
    <td><%= message.has_attach %></td>
    <td><%= link_to 'Show', url_for([current_user, message])%></td>
  </tr>
<% end %>
</table>

